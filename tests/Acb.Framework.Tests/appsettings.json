{
  "site": "frameword.tests",
  "mode": "dev",
  "config": {
    "application": "basic,log4net,dapper,redis,mongo",
    "uri": "http://192.168.0.252:8888"
  },
  //扩展的配置文件路径(json)
  "configPath": "_config",
  "dapperDefault": "default",
  //默认的Redis连接名
  "redisDefault": "default",
  "redisDefaultDb": -1,
  //默认的Mongo连接名
  "mongoDefault": "default",
  "log": {
    "name": "test",
    "file": "",
    "appendToFile": true,
    "rollingStyle": 2,
    "datePattern": "dd\".log\"",
    "staticLogFileName": false,
    "maxSizeRollBackups": 100,
    "maximumFileSize": "2MB",
    "layout": {
      "type": "log4net.Layout.PatternLayout",
      "conversionPattern": "#%property{LogSite}#%date#%r#%thread#%-5level#%logger#%message#%exception#%n"
    }
  }
}
